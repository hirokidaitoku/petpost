<div class="row">
  <aside class="col-sm-3">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title text-center"><%= @user.name %></h3>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 200 }) %>" alt="">
      </div>
    </div>
  <%= render "relationships/follow_button", user: @user %>
  <div class="text-center text-bordered">
    <%= link_to "マイページトップへ", user_path(@user) %>
  </div>
  </aside>
  <div class="col-sm-5 offset-sm-1">
    <h1>ユーザー一覧</h1>
    <%=render "users" , users: @users %>
  </div>
  <div class="col-sm-3">
    <%= render "search" %>
  </div>
  
</div>
  
