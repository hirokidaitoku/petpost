  <aside class="col-sm-3">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title text-center"><%= @user.name %></h3>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 200 }) %>" alt="">
      </div>
    </div>
  <%= render "relationships/follow_button", user: @user %>
  <nav class="navbar navbar-expand-sm navbar-light bg-light">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">詳細</a>
          <ul class="dropdown-menu dropdown-menu-right">
            <li class="dropdown-diviver"></li>
            <li class="dropdown-item">お気に入り</li>
            <li class="dropdown-diviver"></li>
            <li class="dropdown-item">フォロー <span class="badge badge-secondary"><%= @count_followings %></span></li>
