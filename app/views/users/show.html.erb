              <li class="dropdown-item">投稿する</li>
            <% end %>
          </ul>
        </li>
      </ul>
    </div>
　</nav>
  </aside>
  <div class="col-sm-8">
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item"><a href="#" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>">マイペット <span class="badge badge-secondary"><%= @count_mypets %></span></a></li>
