<h1><%= @mypet.petname %>の編集ページ</h1>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(model: @mypet, local: true) do |f| %>
      <%= render "layouts/error_messages", model: f.object %>
      
      <div class="form-group">
        <%= f.label :petname, '名前' %>
        <%= f.text_field :petname, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :age, '年齢' %>
        <%= f.text_field :age, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :description, 'PR' %>
        <%= f.text_field :description, class: 'form-control' %>
      </div>
    
      <%= f.submit '更新する', class: 'btn btn-success btn-block mb-2' %>
    <% end %>
    
    <%= link_to "マイページトップに戻る" , user_path(current_user), class:"btn btn-success btn-block" %>
  </div>
</div>
