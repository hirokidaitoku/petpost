<div class="text-center">
    <h1>ペット登録ページ</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(model: @mypet, local: true) do |f| %>
      <%= render "layouts/error_messages", model: f.object %>
      
      <div class="form-group">
        <%= f.label :petname, '名前' %>
        <%= f.text_field :petname, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :age, '年齢' %>
        <%= f.text_field :age, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :description, 'PR' %>
        <%= f.text_field :description, class: 'form-control' %>
      </div>
    
      <%= f.submit '登録する', class: 'btn btn-success btn-block mb-2' %>
    <% end %>
    
  </div>
    
</div>
