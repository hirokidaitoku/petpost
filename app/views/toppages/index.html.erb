<% if logged_in? %>
  <div class="row">
    <aside class="col-sm-5">
      <%= form_with(model: @post, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :content, "テキスト(200字まで)" %>
          <%= f.text_area :content, class: 'form-control', rows: 5 %>
        </div>
        <div class="form-group">
          <%= f.label :image, "画像" %>
          <%= f.file_field :image, class:"form-control" %>
        </div>
        <%= f.submit '投稿する', class: 'btn btn-primary btn-block' %>
      <% end %>
      <div class="mt-5">
        <%= render "posts/search" %>
      </div>
    </aside>
    <div class="offset-1 col-sm-6">
      <%= render 'posts/posts', posts: @posts %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1><font color="blue">PETPOST</font></h1>
      <h2>みんなのペットを共有しよう！</h2>
    </div>
  </div>
  <div class="row">
    <%= link_to "会員登録", signup_path, class: "btn btn-success offset-3 col-sm-2" %>
    <%= link_to "ログイン", login_path, class: "btn btn-success offset-2 col-sm-2" %>
  </div>
<% end %>